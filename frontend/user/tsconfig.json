{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",  // Ensure this is set to "react-jsx" or "react"
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
